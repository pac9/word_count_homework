<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordCounterActivity">

    <EditText
        android:id="@+id/ask_for_sentence"
        android:layout_width="313dp"
        android:layout_height="225dp"
        android:ems="10"
        android:text="@string/ask_for_sentence"
        android:textAlignment="viewStart"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="70dp" />

    <Button
        android:id="@+id/press_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:onClick="onSubmitResponse"
        android:text="@string/press_button"
        app:layout_constraintTop_toBottomOf="@+id/ask_for_sentence"
        tools:layout_editor_absoluteX="134dp" />

    <TextView
        android:id="@+id/response_view"
        android:layout_width="275dp"
        android:layout_height="27dp"
        android:layout_marginTop="108dp"
        android:text="@string/response_view"
        app:layout_constraintTop_toBottomOf="@+id/press_button"
        tools:layout_editor_absoluteX="76dp" />
</android.support.constraint.ConstraintLayout>